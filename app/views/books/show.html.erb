<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td>
            <%= link_to(@book1.user) do %>
              <%= image_tag @book1.user.get_profile_image, size: "100x100" %><br>
              <%= @book1.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book1.title, @book1 %></td>
          <td><%= @book1.body %></td>

          <% if current_user == @book1.user %>
            <td><%= link_to 'Edit', edit_book_path(@book1), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book1), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>

          <td>
            <% if @book1.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorite_path(@book1), method: :delete do %>
                  ♥<%= @book1.favorites.count %> いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorite_path(@book1), method: :post do %>
                  ♡<%= @book1.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </td>
        </tr>
      </table>

      <!-- コメント表示 -->
      <div class="mt-4">
        <h4>コメント一覧</h4>
        <p>コメント件数：<%= @book1.post_comments.count %></p>
        <% @book1.post_comments.each do |post_comment| %>
          <div class="border p-2 mb-2">
            <p><%= image_tag post_comment.user.get_profile_image, size: "100x100" %></p>
            
            <strong><%= post_comment.user.name %></strong>
            <span class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
            <p><%= post_comment.comment %></p>
          </div>
        <% end %>
      </div>

      <!-- コメント投稿フォーム -->
      <div class="mt-3">
        <%= form_with model: [@book1, @post_comment], local: true do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: 5, placeholder: "コメントをここに", class: "form-control" %>
          </div>
          <%= f.submit "送信する", class: "btn btn-primary mt-2" %>
        <% end %>
      </div>

    </div>
  </div>
</div>